<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en"
    xmlns:tal="http://xml.zope.org/namespaces/tal"
    xmlns:metal="http://xml.zope.org/namespaces/metal"
    xmlns:i18n="http://xml.zope.org/namespaces/i18n"
    lang="en"
    metal:use-macro="context/main_template/macros/master"
    i18n:domain="mingjing.content">
<body>


<metal:content-core fill-slot="content-core">
<metal:content-core define-macro="content-core"
                    tal:define="toc context/table_of_contents|nothing;">
<?python
from plone import api
portal = api.portal.get()
brain = api.content.find(context=portal['1'], Type='News Item', sort_on='created', sort_order='reverse')
?>


<metal:macro use-macro="context/@@pec_macro/macros/cover_hero"/>
<?python
from plone import api
portal = api.portal.get()
?>

<h3>最新消息</h3>

                        <div class="row">
                            <div class="col-md-4 col-xs-6 cover-item" tal:repeat="item python:brain[0:3]">
                                <div class="gt_blog_wrap mb cover-item">
                                    <div class="gt_blog_des_wrap">

                        <img class="image-mini"
                             tal:condition="python:item.getObject().image"
                             src="${item/getURL}/@@images/image/mini"
                        />
                        <img class="image-mini"
                             tal:condition="python:not item.getObject().image"
                             src="${portal/absolute_url}/resource/images/team_logo.jpg/@@images/image/mini"
                        />

                                        <h5><a href="${item/getURL}">${item/Title}</a></h5>
                                        <a href="${item/getURL}" class="pull-right">詳全文 <i class="fa fa-arrow-circle-o-right"></i></a>
                                        <li><i class="fa fa-calendar"></i> <span tal:replace="python:item.created.strftime('%d %b %Y')"/></li>
                                    </div>
                                </div>
                            </div>
                        </div>


